<project name="myproject" default="myproject" basedir=".">
	<description>
        switch between different targets
    </description>

	<!-- set global properties for this build -->
	<property name="src" location="src"/>
	<property name="res" location="res"/>
	<property name="customizations" location="customizations"/>

	<target name="myproject" description="delete current res and put in the defaults" >
		<delete dir="${res}" />
		<copydir dest="${res}" src="${customizations}/default" />
		<!-- change the import in all Java source files -->
		<replaceregexp flags="g" byline="false">
		    <regexp pattern="import com.android.multiple_targets(.*).R;" /> 
		    <substitution expression="import com.android.multiple_targets.R;" />
		    <fileset dir="src" includes="**/*.java" /> 
		</replaceregexp>
		<!-- change the package name in AndroidManifest -->
		<replaceregexp flags="g" byline="false">
		    <regexp pattern="package=&quot;com.android.multiple_targets(.*)&quot;" /> 
		    <substitution expression="package=&quot;com.android.multiple_targets&quot;" />
		    <fileset dir="" includes="AndroidManifest.xml" /> 
		</replaceregexp>
	</target>
	
	<target name="iamdifferent" depends="myproject" description="exchange resources and change the package name" >
		<copydir dest="${res}" src="${customizations}/iamdifferent" forceoverwrite="true" />
		<replaceregexp flags="g" byline="false">
		    <regexp pattern="import com.android.multiple_targets.R;" /> 
		    <substitution expression="import com.android.multiple_targets.iamdifferent.R;" />
		    <fileset dir="src" includes="**/*.java" /> 
		</replaceregexp>
		<replaceregexp flags="g" byline="false">
		    <regexp pattern="package=&quot;com.android.multiple_targets&quot;" /> 
		    <substitution expression="package=&quot;com.android.multiple_targets.iamdifferent&quot;" />
		    <fileset dir="" includes="AndroidManifest.xml" /> 
		</replaceregexp>
	</target>
</project>
